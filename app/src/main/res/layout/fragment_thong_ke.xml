<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_marginStart="30dp"
            android:textSize="20dp"
            android:id="@+id/txtBatDau"
            android:text="Chọn ngày bắt đầu: "
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/baseline_calendar_month_24"
            android:id="@+id/imgStart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/txtBatDau"

            />

        <TextView
            android:textColor="#0D44EC"
            android:textSize="20dp"
            android:layout_marginStart="100dp"
            android:id="@+id/txtStart"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtBatDau"
            android:layout_marginTop="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_marginStart="30dp"
            android:textSize="20dp"
            android:id="@+id/txtKetThuc"
            android:text="Chọn ngày kết thúc : "
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/baseline_calendar_month_24"
            android:id="@+id/imgEnd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/txtKetThuc"

            />

        <TextView
            android:textColor="#0D44EC"
            android:textSize="20dp"
            android:layout_marginStart="100dp"
            android:id="@+id/txtEnd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtKetThuc"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
    <Button
        android:layout_gravity="center"
        android:id="@+id/btnThongKe"
        android:text="Thống kê"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#E80909"
        android:layout_marginTop="50dp"
        android:id="@+id/txtKetQua"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>