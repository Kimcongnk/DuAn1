<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"    android:background="@drawable/bg_boder_liss"

    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNewItem"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="#03A9F4"
            android:gravity="center"
            android:text="Thêm sản phẩm"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_name_product"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:hint="Tên sản phẩm"
        android:textColor="#000"
        android:textColorHint="#000"
        android:background="@drawable/style_dialog_edittext"/>
    <Spinner
        android:id="@+id/spin_loai_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        />
    <EditText
        android:id="@+id/edt_price_product"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:hint="Giá"
        android:inputType="number"
        android:lines="1"
        android:textColor="#000"
        android:textColorHint="#000"
        android:background="@drawable/style_dialog_edittext"/>

    <EditText
        android:id="@+id/edt_desc_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:hint="Mô tả"
        android:textColor="#000"
        android:textColorHint="#000"
        android:background="@drawable/style_dialog_edittext"/>
    <EditText
        android:id="@+id/img_select"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:hint="Url ảnh"
        android:textColor="#000"
        android:textColorHint="#000"
        android:background="@drawable/style_dialog_edittext"/>

    <ImageView
        android:id="@+id/anh"
        android:layout_width="192dp"
        android:layout_height="171dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_select"/>
    <CheckBox
        android:id="@+id/chk_out_of_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Hết hàng"

        android:textColor="#000" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Thêm"
        android:textStyle="bold"
        android:backgroundTint="#03A9F4"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>